<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_group_name_container"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:hint="그룹 이름"
                android:paddingBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="42dp">

            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tiet_team_name"
                    android:background="@color/colorClear"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_create_team"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintTop_toBottomOf="@id/til_group_name_container"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:text="생성"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cancel"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintTop_toTopOf="@id/tv_create_team"
                app:layout_constraintBottom_toBottomOf="@id/tv_create_team"
                app:layout_constraintRight_toLeftOf="@id/tv_create_team"
                android:layout_marginRight="16dp"
                android:text="취소"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
