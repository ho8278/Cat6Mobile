<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cl_scheduleContainer"
        android:layout_marginTop="4dp"
        android:background="@drawable/shape_round_rectangle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
            android:id="@+id/view_dot"
            android:layout_marginLeft="3dp"
            app:layout_constraintTop_toTopOf="@id/tv_schedule_name"
            app:layout_constraintBottom_toBottomOf="@id/tv_schedule_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="4dp"
            android:layout_height="4dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_schedule_name"
            android:layout_marginLeft="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/view_dot"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/colorBlack"
            android:ellipsize="end"
            android:textSize="10sp"
            android:maxLines="1"
            tools:text="TESTESTESTESTEST"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>