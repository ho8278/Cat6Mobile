<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="name" type="String"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_container"
            android:layout_width="match_parent"
            android:layout_height="30dp">

        <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/cb_add"
                app:layout_constraintTop_toTopOf="@id/tv_friends_name"
                app:layout_constraintBottom_toBottomOf="@id/tv_friends_name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_friends_name"
                app:layout_constraintLeft_toRightOf="@id/cb_add"
                tools:text="TEST"
                android:text="@{name}"
                android:paddingLeft="8dp"
                android:gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
