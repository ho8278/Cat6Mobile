<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:height="500dp"
                  android:width="500dp"/>
            <solid android:color="#50bcdf"/>
        </shape>
    </item>

    <item   android:left="-200dp"
            android:top="-200dp"
            android:bottom="400dp"
            android:right="-200dp">
        <rotate android:fromDegrees="15"
                android:pivotX="800">
            <shape android:shape="rectangle">
                <solid android:color="#FFFFFF"/>
            </shape>
        </rotate>
    </item>
</layer-list>